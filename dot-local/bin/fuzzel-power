#!/bin/sh

anchor=$([ $# != 0 ] && echo -a $1)
echo $anchor
pick=$(printf "󰍃 Logout\n󰤄 Sleep\n Restart\n Shutdown" | fuzzel --dmenu $anchor -w 15 -l 4)

case $pick in
	*"Logout")
		swaymsg exit;;
	*"Sleep")
		systemctl suspend;;
	*"Restart")
		systemctl reboot;;
	*"Shutdown")
		systemctl poweroff;;
esac
